<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    tools:context=".Options">


    <Button
        android:id="@+id/Choose"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="226dp"
        android:text="@string/choose_randomly" />

    <Button
        android:id="@+id/Create"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignLeft="@+id/Choose"
        android:layout_alignRight="@+id/Choose"
        android:layout_alignStart="@+id/Choose"
        android:layout_alignEnd="@+id/Choose"
        android:layout_centerInParent="true"
        android:text="@string/create" />

    <Button
        android:id="@+id/Set"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignLeft="@+id/Choose"
        android:layout_alignStart="@+id/Choose"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Choose"
        android:layout_alignEnd="@+id/Choose"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:text="@string/title_activity_set_filters" />
</RelativeLayout>